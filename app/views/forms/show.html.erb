<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Forms</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Forms', forms_path %></div>
      <div class="breadcrumb-item">Show Form</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4><%= @form.name %></h4>
      </div>
      <div class="card-body">
        <h6>Form tutor</h6>
        <ul class="list-group mb-4">
          <li class="list-group-item"><%= @form.form_tutor %></li>
        </ul>
        <h6>Students</h6>
        <% if @form.users.any? %>
          <ul class="list-group">
            <% @form.users.each do |u| %>
              <li class="list-group-item"><%= u.full_name %></li>
            <% end %>
          </ul>
        <% else %>
          <p>There are no students in this form.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# link_to icon('fas fa-edit', 'Edit'), edit_form_path(@form), class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), forms_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Form') %>
