<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Lessons</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Lessons', lessons_path %></div>
      <div class="breadcrumb-item">New Lesson</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>New Lesson</h4>
      </div>
      <div class="card-body">
        <%= render 'form', lesson: @lesson %>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-arrow-left', 'Back'), lessons_path, class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'New Lesson') %>
